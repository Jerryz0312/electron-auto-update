{
  "name": "electron-updater-generic-example",
  "version": "0.2.0",
  "main": "main.js",
  "description": "electron-updater generic example project",
  "author": {
    "name": "Matt Haggard",
    "email": "example@example.com",
    "url": "https://example.com/"
  },
  "scripts": {
    "start": "electron .",
    "dist": "build --linux --x64",
    "serve": "http-server wwwroot/ -p 8080"
  },
  "dependencies": {
    "electron-updater": "^4.0.6"
  },
  "devDependencies": {
    "electron": "^5.0.1",
    "electron-builder": "^20.39.0",
    "http-server": "^0.11.1"
  },
  "build": {
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:8080/"
      }
    ],
    "appId": "com.github.iffy.electronupdatergenericexample",
    "linux": {
      "category": "Utility",
      "icon": "icons/icons",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "appImage": {
      "systemIntegration": "doNotAsk"
    },
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "win": {
      "target": "nsis",
      "certificateFile": "./certs/my_signing_key.pfx",
      "certificatePassword": "winamp291"
    }
  }
}
